<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    layout_width="wrap_content"
    layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBFBFB"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/layerhead"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="11dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/img" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center|right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="username" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="황영합이당" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/seungminhead" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layerbody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/layerhead"
            app:layout_constraintBottom_toTopOf="@+id/layerbody2"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconifiedByDefault="false"
                android:searchIcon="@drawable/ic_launcher_foreground"
                android:submitBackground="@drawable/ic_launcher_foreground"
                app:queryHint="검색어를 입력하세요."
                android:background="@drawable/border"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layerbody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/layerbody1"
            tools:layout_editor_absoluteX="20dp">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="24dp"
                android:text="통계" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:text="" />
                    <TextView
                        android:gravity="center"
                        android:layout_weight="9.5"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="최근 100일" />
                    <TextView
                        android:gravity="center"
                        android:layout_weight="9.5"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="최근 200일" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="1" />
                    <TextView
                        android:gravity="center"
                        android:layout_weight="9.5"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="..." />
                    <TextView
                        android:gravity="center"
                        android:layout_weight="9.5"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="..." />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="2" />
                    <TextView
                        android:gravity="center"
                        android:layout_weight="9.5"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="2" />
                    <TextView
                        android:gravity="center"
                        android:layout_weight="9.5"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="3" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="3" />
                    <TextView
                        android:gravity="center"
                        android:layout_weight="9.5"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="2" />
                    <TextView
                        android:gravity="center"
                        android:layout_weight="9.5"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="3" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="4" />
                    <TextView
                        android:gravity="center"
                        android:layout_weight="9.5"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="2" />
                    <TextView
                        android:gravity="center"
                        android:layout_weight="9.5"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="3" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="5" />
                    <TextView
                        android:gravity="center"
                        android:layout_weight="9.5"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="2" />
                    <TextView
                        android:gravity="center"
                        android:layout_weight="9.5"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="3" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>